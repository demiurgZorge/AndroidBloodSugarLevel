<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/colorPrimaryLight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        >

        <TextView
            android:id="@+id/sugarIdItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/button_half_margin"
            android:layout_gravity="center_vertical"
            android:layout_weight="10"
            android:text="534"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/sugarLevelItem"
            android:layout_width="36dp"
            android:layout_height="32dp"
            android:layout_weight="10"
            android:text="5.6"
            android:layout_gravity="bottom"
            android:textColor="@color/red"
            android:textAlignment="center"
            android:textSize="24sp" />


        <TextView
            android:id="@+id/sugarDateItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_gravity="bottom|right"
            android:layout_weight="15"
            android:text="2018-12-13"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/sugarTimeItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textAlignment="center"
            android:layout_marginLeft="@dimen/button_half_margin"
            android:layout_weight="15"
            android:text="13-48"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <Switch
            android:id="@+id/sugarDeleteSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorPrimaryLight"
            android:layout_marginLeft="@dimen/button_half_margin"
            android:layout_weight="10"
            android:text="DEL?"
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>